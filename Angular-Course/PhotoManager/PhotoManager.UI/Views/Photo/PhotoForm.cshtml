@model Domain.Models.Photo
@{
    Layout = null;
}
<div class="form-group">
    <label for="Name" class="col-sm-2 col-sm-offset-2 control-label">Name</label>
    <div class="col-sm-3">
        @Html.TextBoxFor(model => model.Name, new { @type = "text", @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label for="Description" class="col-sm-2 col-sm-offset-2 control-label">Description</label>
    <div class="col-sm-3">
        @Html.TextBoxFor(model => model.Description, new { @type = "text", @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label for="CameraModel" class="col-sm-2 col-sm-offset-2 control-label">Camera model</label>
    <div class="col-sm-3">
        @Html.TextBoxFor(model => model.CameraModel, new { @type = "text", @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label for="FocalLengthOfTheLens" class="col-sm-2 col-sm-offset-2 control-label">Focal length of the lens</label>
    <div class="col-sm-3">
        @Html.TextBoxFor(model => model.FocalLengthOfTheLens, new { @type = "text", @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label for="Diaphragm" class="col-sm-2 col-sm-offset-2 control-label">Diaphragm</label>
    <div class="col-sm-3">
        @Html.TextBoxFor(model => model.Diaphragm, new { @type = "text", @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label for="ShutterSpeed" class="col-sm-2 col-sm-offset-2 control-label">Shutter speed</label>
    <div class="col-sm-3">
        @Html.TextBoxFor(model => model.ShutterSpeed, new { @type = "text", @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label for="ISO" class="col-sm-2 col-sm-offset-2 control-label">ISO</label>
    <div class="col-sm-3">
        @Html.TextBoxFor(model => model.ISO, new { @type = "text", @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label for="FlashInUse" class="col-sm-2 col-sm-offset-2 control-label">Flash in use</label>
    <div class="col-sm-3">
        @Html.CheckBoxFor(model => model.FlashInUse, new { @class = "form-control" })
    </div>
</div>